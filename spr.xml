<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:p="http://www.springframework.org/schema/p"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd"
 >
   <bean id="Employee" class="com.Employee">
   
       <property name="employeeName" value="Peter Jones"/>
       <property name="address" value="23 old baker street"/>
       <property name="basicSalary" value="5000f"/>
   
   </bean>
 
 
 
   <bean id="Department" class="com.Department">
      <property name="departmentName" value="Data Analyst"/>
      <property name="manager" ref="Employee"/>
 
 
   </bean>
 
 </beans>